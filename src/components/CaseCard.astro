---
interface Props {
  title: string;
  industry: string;
  impactMetric: string;
  summary: string;
  tech: string[];
  ctaLabel: string;
  ctaHref: string;
}

const { title, industry, impactMetric, summary, tech, ctaLabel, ctaHref } = Astro.props;
---

<article class="card flex h-full flex-col">
  <div class="mb-4 flex items-start justify-between">
    <span class="inline-block rounded-full bg-primary-100 px-3 py-1 text-xs font-semibold text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
      {industry}
    </span>
    <div class="text-right">
      <div class="text-2xl font-bold text-primary-600 dark:text-primary-400">
        {impactMetric}
      </div>
    </div>
  </div>

  <h3 class="mb-3 text-2xl font-bold text-secondary-900 dark:text-white">
    {title}
  </h3>

  <p class="mb-4 flex-grow text-secondary-600 dark:text-secondary-400">
    {summary}
  </p>

  <div class="mb-4 flex flex-wrap gap-2">
    {tech.map((t) => (
      <span class="inline-block rounded-md bg-secondary-100 px-2 py-1 text-xs font-medium text-secondary-700 dark:bg-secondary-700 dark:text-secondary-300">
        {t}
      </span>
    ))}
  </div>

  <a
    href={ctaHref}
    class="mt-auto inline-flex items-center font-semibold text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
  >
    {ctaLabel}
    <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</article>
