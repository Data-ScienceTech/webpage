---
import '../styles/globals.css';

interface Props {
  title: string;
  description: string;
  lang: 'en' | 'fr';
  canonical?: string;
}

const { title, description, lang, canonical } = Astro.props;
const currentUrl = canonical || new URL(Astro.url.pathname, Astro.site).toString();
const ogImageUrl = new URL('/og-image.png', Astro.site).toString();

// Get theme from localStorage if available (handled client-side)
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={currentUrl} />
    <meta name="generator" content={Astro.generator} />

    <!-- Brand Fonts: Space Grotesk (headings) + Inter (body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : 'fr_FR'} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageUrl} />
    
    <!-- Theme handling -->
    <script is:inline>
      // Prevent flash of wrong theme
      const theme = localStorage.getItem('theme') || 'light';
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <noscript>
      <div style="padding: 1rem; background: #fef3c7; color: #92400e; text-align: center;">
        This site works best with JavaScript enabled.
      </div>
    </noscript>
    
    <!-- Hidden Netlify form placeholders for JS-driven form detection -->
    
    <!-- Force Field Lead Capture Forms -->
    <form name="forcefield-access" netlify netlify-honeypot="bot-field" hidden>
      <input type="text" name="first_name" />
      <input type="text" name="last_name" />
      <input type="text" name="company" />
      <input type="email" name="email" />
      <input type="text" name="job_title" />
      <textarea name="message"></textarea>
    </form>
    <form name="forcefield-access-fr" netlify netlify-honeypot="bot-field" hidden>
      <input type="text" name="first_name" />
      <input type="text" name="last_name" />
      <input type="text" name="company" />
      <input type="email" name="email" />
      <input type="text" name="job_title" />
      <textarea name="message"></textarea>
    </form>

    <slot />
  </body>
</html>
