---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import siteContent from '../../content/site.fr.json';

const lang = 'fr';
---

<MainLayout
  title={`Inscription — Accès anticipé | ${siteContent.company}`}
  description="Créez votre compte pour accéder au pare-feu LLM Force Field — gratuit pendant la période d'accès anticipé."
  lang={lang}
>
  <Header lang={lang} content={siteContent} />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-secondary-900 to-secondary-800 py-16">
      <div class="container-custom">
        <div class="mx-auto max-w-4xl text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/20 text-primary-400 text-sm font-medium mb-6">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            Accès anticipé
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Démarrez avec Force Field</h1>
          <p class="text-xl text-secondary-300">
            Créez votre compte pour accéder au pare-feu LLM Force Field — gratuit pendant la période d'accès anticipé.
          </p>
        </div>
      </div>
    </section>

    <section class="section-padding">
      <div class="container-custom">
        <div class="mx-auto max-w-xl">

          <!-- Étape 1 : Formulaire d'inscription -->
          <div id="signup-form-container" class="card p-8">
            <h2 class="text-2xl font-bold text-secondary-900 dark:text-white mb-2">Créez votre compte</h2>
            <p class="text-secondary-600 dark:text-secondary-400 mb-8">Entrez vos informations ci-dessous pour commencer.</p>

            <form id="signup-form" class="space-y-6" novalidate>
              <!-- Honeypot -->
              <div class="hidden">
                <input type="text" name="bot-field" tabindex="-1" autocomplete="off" />
              </div>

              <!-- Prénom -->
              <div>
                <label for="first_name" class="label">Prénom <span class="text-red-500">*</span></label>
                <input
                  type="text"
                  id="first_name"
                  name="first_name"
                  required
                  autocomplete="given-name"
                  placeholder="Jeanne"
                  class="input-field"
                />
                <p id="first_name-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>
              </div>

              <!-- Nom -->
              <div>
                <label for="last_name" class="label">Nom <span class="text-red-500">*</span></label>
                <input
                  type="text"
                  id="last_name"
                  name="last_name"
                  required
                  autocomplete="family-name"
                  placeholder="Tremblay"
                  class="input-field"
                />
                <p id="last_name-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>
              </div>

              <!-- Courriel -->
              <div>
                <label for="email" class="label">Adresse courriel <span class="text-red-500">*</span></label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  autocomplete="email"
                  placeholder="jeanne.tremblay@entreprise.com"
                  class="input-field"
                />
                <p id="email-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>
              </div>

              <!-- Politique de confidentialité -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="accept_privacy"
                  name="accept_privacy"
                  required
                  class="mt-1 h-4 w-4 rounded border-secondary-300 text-primary-600 focus:ring-primary-500 dark:border-secondary-600 dark:bg-secondary-800"
                />
                <label for="accept_privacy" class="text-sm text-secondary-700 dark:text-secondary-300">
                  J'ai lu et j'accepte la <a href="/fr/confidentialite" target="_blank" class="text-primary-600 hover:text-primary-700 dark:text-primary-400 underline">Politique de confidentialité</a>. <span class="text-red-500">*</span>
                </label>
              </div>
              <p id="accept_privacy-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>

              <!-- Conditions -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="accept_terms"
                  name="accept_terms"
                  required
                  class="mt-1 h-4 w-4 rounded border-secondary-300 text-primary-600 focus:ring-primary-500 dark:border-secondary-600 dark:bg-secondary-800"
                />
                <label for="accept_terms" class="text-sm text-secondary-700 dark:text-secondary-300">
                  J'ai lu et j'accepte les <a href="/fr/conditions" target="_blank" class="text-primary-600 hover:text-primary-700 dark:text-primary-400 underline">Conditions d'accès anticipé</a>. <span class="text-red-500">*</span>
                </label>
              </div>
              <p id="accept_terms-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>

              <!-- Error Banner -->
              <div id="form-error" class="hidden p-4 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-sm text-red-700 dark:text-red-300"></div>

              <!-- Submit -->
              <button
                type="submit"
                id="submit-btn"
                class="btn-primary w-full flex items-center justify-center gap-2"
              >
                <span id="submit-text">Créer mon compte</span>
                <svg id="submit-spinner" class="hidden animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </form>
          </div>

          <!-- Étape 2 : Vérification (masqué initialement) -->
          <div id="verify-container" class="card p-8 hidden">
            <h2 class="text-2xl font-bold text-secondary-900 dark:text-white mb-2">Vérifiez votre courriel</h2>
            <p class="text-secondary-600 dark:text-secondary-400 mb-2">
              Nous avons envoyé un code de vérification à 6 chiffres à <strong id="verify-email-display" class="text-secondary-900 dark:text-white"></strong>.
            </p>
            <p class="text-secondary-500 dark:text-secondary-500 text-sm mb-8">Vérifiez votre boîte de réception (et vos courriels indésirables) et entrez le code ci-dessous. Le code expire dans 10 minutes.</p>

            <form id="verify-form" class="space-y-6" novalidate>
              <div>
                <label for="verification_code" class="label">Code de vérification <span class="text-red-500">*</span></label>
                <input
                  type="text"
                  id="verification_code"
                  name="verification_code"
                  required
                  maxlength="6"
                  pattern="[0-9]{6}"
                  inputmode="numeric"
                  autocomplete="one-time-code"
                  placeholder="000000"
                  class="input-field text-center text-2xl tracking-[0.5em] font-mono"
                />
                <p id="verification_code-error" class="mt-1 text-sm text-red-600 dark:text-red-400 hidden"></p>
              </div>

              <div id="verify-error" class="hidden p-4 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-sm text-red-700 dark:text-red-300"></div>

              <button
                type="submit"
                id="verify-btn"
                class="btn-primary w-full flex items-center justify-center gap-2"
              >
                <span id="verify-text">Vérifier et obtenir la clé API</span>
                <svg id="verify-spinner" class="hidden animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </form>
          </div>

          <!-- Étape 3 : Succès (masqué initialement) -->
          <div id="success-container" class="card p-8 hidden">
            <div class="text-center mb-6">
              <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-green-100 dark:bg-green-900/30 mb-4">
                <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h2 class="text-2xl font-bold text-secondary-900 dark:text-white mb-2">Bienvenue, <span id="success-name"></span> !</h2>
              <p class="text-secondary-600 dark:text-secondary-400">Votre compte Force Field a été créé. Voici votre clé API :</p>
            </div>

            <div class="relative">
              <div class="p-4 rounded-lg bg-secondary-100 dark:bg-secondary-800 font-mono text-sm break-all text-secondary-900 dark:text-white" id="api-key-display"></div>
              <button
                id="copy-key-btn"
                type="button"
                class="absolute top-2 right-2 p-2 rounded-md bg-secondary-200 hover:bg-secondary-300 dark:bg-secondary-700 dark:hover:bg-secondary-600 text-secondary-600 dark:text-secondary-300 transition-colors"
                title="Copier la clé API"
              >
                <svg id="copy-icon" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <svg id="check-icon" class="h-4 w-4 hidden text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </button>
            </div>

            <div class="mt-6 p-4 rounded-lg bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800">
              <p class="text-sm text-amber-800 dark:text-amber-300">
                <strong>Important :</strong> Conservez cette clé API en lieu sûr. Vous ne pourrez plus la consulter. Incluez-la dans l'en-tête <code class="px-1 py-0.5 rounded bg-amber-100 dark:bg-amber-900/40">X-API-Key</code> de vos requêtes vers la passerelle Force Field.
              </p>
            </div>

            <div class="mt-6 text-center">
              <a href="/fr/architecture" class="text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium">
                Découvrez comment intégrer Force Field &rarr;
              </a>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} content={siteContent} />
</MainLayout>

<script>
  const API_PRIMARY = 'https://api.datasciencetech.ca';
  const API_FALLBACK = 'https://forcefield-registration-api-546798516374.us-central1.run.app';

  const signupForm = document.getElementById('signup-form') as HTMLFormElement;
  const verifyForm = document.getElementById('verify-form') as HTMLFormElement;
  const signupContainer = document.getElementById('signup-form-container')!;
  const verifyContainer = document.getElementById('verify-container')!;
  const successContainer = document.getElementById('success-container')!;

  let registeredEmail = '';

  // Helpers
  function showError(id: string, msg: string) {
    const el = document.getElementById(id);
    if (el) { el.textContent = msg; el.classList.remove('hidden'); }
  }
  function hideError(id: string) {
    const el = document.getElementById(id);
    if (el) { el.textContent = ''; el.classList.add('hidden'); }
  }
  function setLoading(btnId: string, textId: string, spinnerId: string, loading: boolean) {
    const btn = document.getElementById(btnId) as HTMLButtonElement;
    const text = document.getElementById(textId)!;
    const spinner = document.getElementById(spinnerId)!;
    btn.disabled = loading;
    text.classList.toggle('opacity-0', loading);
    spinner.classList.toggle('hidden', !loading);
  }

  /** POST JSON vers l'URL primaire ; en cas d'erreur réseau, réessaie avec l'URL de secours. */
  async function apiPost(path: string, body: object): Promise<Response> {
    try {
      const res = await fetch(`${API_PRIMARY}${path}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body),
      });
      return res;
    } catch (_networkErr) {
      return fetch(`${API_FALLBACK}${path}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body),
      });
    }
  }

  // ── Étape 1 : Inscription ─────────────────────────────────────────────────
  signupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    ['first_name', 'last_name', 'email', 'accept_privacy', 'accept_terms'].forEach(id => hideError(id + '-error'));
    hideError('form-error');

    const firstName = (document.getElementById('first_name') as HTMLInputElement).value.trim();
    const lastName = (document.getElementById('last_name') as HTMLInputElement).value.trim();
    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const acceptPrivacy = (document.getElementById('accept_privacy') as HTMLInputElement).checked;
    const acceptTerms = (document.getElementById('accept_terms') as HTMLInputElement).checked;
    const botField = (signupForm.querySelector('[name="bot-field"]') as HTMLInputElement).value;

    if (botField) return;

    let valid = true;
    if (!firstName) { showError('first_name-error', 'Le prénom est requis.'); valid = false; }
    if (!lastName) { showError('last_name-error', 'Le nom est requis.'); valid = false; }
    if (!email) { showError('email-error', "L'adresse courriel est requise."); valid = false; }
    else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) { showError('email-error', 'Veuillez entrer une adresse courriel valide.'); valid = false; }
    if (!acceptPrivacy) { showError('accept_privacy-error', 'Vous devez accepter la Politique de confidentialité pour continuer.'); valid = false; }
    if (!acceptTerms) { showError('accept_terms-error', 'Vous devez accepter les Conditions pour continuer.'); valid = false; }
    if (!valid) return;

    setLoading('submit-btn', 'submit-text', 'submit-spinner', true);

    try {
      const res = await apiPost('/register', {
        email,
        name: `${firstName} ${lastName}`,
        accept_privacy: true,
        accept_terms: true,
      });

      if (!res.ok) {
        const data = await res.json().catch(() => ({}));
        throw new Error(data.detail || data.message || data.error || `L'inscription a échoué (${res.status})`);
      }

      registeredEmail = email;
      signupContainer.classList.add('hidden');
      verifyContainer.classList.remove('hidden');
      (document.getElementById('verify-email-display') as HTMLElement).textContent = email;

    } catch (err: any) {
      const errorEl = document.getElementById('form-error')!;
      errorEl.textContent = err.message || 'Une erreur est survenue. Veuillez réessayer.';
      errorEl.classList.remove('hidden');
    } finally {
      setLoading('submit-btn', 'submit-text', 'submit-spinner', false);
    }
  });

  // ── Étape 2 : Vérification ────────────────────────────────────────────────
  verifyForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    hideError('verification_code-error');
    hideError('verify-error');

    const code = (document.getElementById('verification_code') as HTMLInputElement).value.trim();

    if (!code || !/^\d{6}$/.test(code)) {
      showError('verification_code-error', 'Veuillez entrer un code à 6 chiffres valide.');
      return;
    }

    setLoading('verify-btn', 'verify-text', 'verify-spinner', true);

    try {
      const res = await apiPost('/verify', {
        email: registeredEmail,
        code,
      });

      if (!res.ok) {
        const data = await res.json().catch(() => ({}));
        throw new Error(data.detail || data.message || data.error || `La vérification a échoué (${res.status})`);
      }

      const data = await res.json();
      const apiKey = data.api_key || data.key || data.apiKey || '';
      const userName = data.name || '';

      verifyContainer.classList.add('hidden');
      successContainer.classList.remove('hidden');
      (document.getElementById('api-key-display') as HTMLElement).textContent = apiKey;
      (document.getElementById('success-name') as HTMLElement).textContent = userName;

    } catch (err: any) {
      const errorEl = document.getElementById('verify-error')!;
      errorEl.textContent = err.message || 'La vérification a échoué. Veuillez réessayer.';
      errorEl.classList.remove('hidden');
    } finally {
      setLoading('verify-btn', 'verify-text', 'verify-spinner', false);
    }
  });

  // ── Copier la clé API ─────────────────────────────────────────────────────
  document.getElementById('copy-key-btn')?.addEventListener('click', async () => {
    const apiKey = document.getElementById('api-key-display')?.textContent || '';
    try {
      await navigator.clipboard.writeText(apiKey);
      document.getElementById('copy-icon')?.classList.add('hidden');
      document.getElementById('check-icon')?.classList.remove('hidden');
      setTimeout(() => {
        document.getElementById('copy-icon')?.classList.remove('hidden');
        document.getElementById('check-icon')?.classList.add('hidden');
      }, 2000);
    } catch {
      const range = document.createRange();
      range.selectNodeContents(document.getElementById('api-key-display')!);
      window.getSelection()?.removeAllRanges();
      window.getSelection()?.addRange(range);
    }
  });
</script>