---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

import siteContent from '../../content/site.en.json';
import productContent from '../../content/forcefield.en.json';

const lang = 'en';
const pageTitle = productContent.meta.title;
const pageDescription = productContent.meta.description;
---

<MainLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
>
  <Header lang={lang} content={siteContent} />

  <main>
    <!-- Hero -->
    <section class="relative overflow-hidden py-16 md:py-20 lg:py-28 bg-gradient-to-br from-secondary-900 via-secondary-800 to-primary-900">
      <div class="absolute inset-0 opacity-5">
        <svg class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[700px] h-[700px]" viewBox="0 0 200 200" fill="none">
          <path d="M100 10 L180 50 L180 110 C180 150 145 185 100 195 C55 185 20 150 20 110 L20 50 Z" stroke="currentColor" stroke-width="1" class="text-primary-400"/>
        </svg>
      </div>
      <div class="container-custom relative">
        <div class="mx-auto max-w-4xl text-center">
          <h1 class="mb-6 text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight">
            {productContent.hero.title}
          </h1>
          <p class="mb-10 text-xl md:text-2xl text-secondary-300 max-w-3xl mx-auto">
            {productContent.hero.subtitle}
          </p>
          <a
            href="#request-access"
            class="btn-accent inline-flex items-center gap-2 text-lg px-8 py-4"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            Request Access
          </a>
        </div>
      </div>
    </section>

    <!-- Intro -->
    <section class="section-padding bg-secondary-50 dark:bg-secondary-900">
      <div class="container-custom">
        <div class="mx-auto max-w-4xl">
          <div class="rounded-2xl border border-secondary-200 dark:border-secondary-700 bg-white dark:bg-secondary-800 p-8 md:p-10">
            <p class="text-lg text-secondary-600 dark:text-secondary-300 leading-relaxed mb-4">
              {productContent.intro}
            </p>
            <p class="text-lg font-semibold text-primary-600 dark:text-primary-400">
              {productContent.intro_closing}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Mandatory MCP On-Ramp -->
    <section class="section-padding bg-white dark:bg-secondary-800">
      <div class="container-custom">
        <div class="mx-auto max-w-4xl">
          <div class="rounded-2xl border border-primary-200 dark:border-primary-800 bg-primary-50 dark:bg-primary-900/20 p-8 md:p-10">
            <h2 class="mb-4 text-2xl md:text-3xl font-bold text-secondary-900 dark:text-white">
              {productContent.mcp_onramp.title}
            </h2>
            <p class="text-lg text-secondary-600 dark:text-secondary-300 leading-relaxed">
              {productContent.mcp_onramp.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Capabilities â€” 3 Cards -->
    <section class="section-padding bg-secondary-50 dark:bg-secondary-900">
      <div class="container-custom">
        <h2 class="mb-12 text-3xl md:text-4xl font-bold text-secondary-900 dark:text-white text-center">
          {productContent.capabilities.title}
        </h2>
        <div class="grid gap-8 md:grid-cols-3 max-w-5xl mx-auto">
          {productContent.capabilities.items.map((cap) => (
            <div class="rounded-2xl border border-secondary-200 dark:border-secondary-700 bg-white dark:bg-secondary-800 p-8 hover:border-primary-300 dark:hover:border-primary-600 transition-colors">
              <h3 class="mb-4 text-xl font-bold text-secondary-900 dark:text-white">
                {cap.title}
              </h3>
              <ul class="space-y-3">
                {cap.items.map((item: string) => (
                  <li class="flex items-start gap-3 text-secondary-600 dark:text-secondary-300">
                    <svg class="mt-0.5 h-5 w-5 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- What This Enables -->
    <section class="section-padding bg-white dark:bg-secondary-800">
      <div class="container-custom">
        <div class="mx-auto max-w-4xl text-center">
          <h2 class="mb-4 text-2xl md:text-3xl font-bold text-secondary-900 dark:text-white">
            {productContent.what_this_enables.title}
          </h2>
          <p class="text-lg text-secondary-600 dark:text-secondary-300 leading-relaxed max-w-3xl mx-auto">
            {productContent.what_this_enables.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Request Access Form -->
    <section id="request-access" class="section-padding scroll-mt-24 bg-gradient-to-br from-secondary-900 via-secondary-800 to-primary-900">
      <div class="container-custom">
        <div class="mx-auto max-w-2xl">
          <h2 class="mb-8 text-3xl font-bold text-white text-center">
            {productContent.form.title}
          </h2>
          <form
            name="forcefield-access"
            method="POST"
            data-netlify="true"
            data-netlify-honeypot="bot-field"
            class="space-y-5 bg-white dark:bg-secondary-800 rounded-2xl p-8 md:p-10 shadow-xl"
          >
            <input type="hidden" name="form-name" value="forcefield-access" />
            <p class="hidden">
              <label>Don't fill this out: <input name="bot-field" /></label>
            </p>
            <div class="grid gap-5 sm:grid-cols-2">
              <div>
                <label for="first_name" class="label">{productContent.form.fields.first_name}</label>
                <input type="text" id="first_name" name="first_name" required class="input-field" />
              </div>
              <div>
                <label for="last_name" class="label">{productContent.form.fields.last_name}</label>
                <input type="text" id="last_name" name="last_name" required class="input-field" />
              </div>
            </div>
            <div>
              <label for="company" class="label">{productContent.form.fields.company}</label>
              <input type="text" id="company" name="company" required class="input-field" />
            </div>
            <div>
              <label for="email" class="label">{productContent.form.fields.email}</label>
              <input type="email" id="email" name="email" required class="input-field" />
            </div>
            <div>
              <label for="job_title" class="label">{productContent.form.fields.job_title}</label>
              <input type="text" id="job_title" name="job_title" class="input-field" />
            </div>
            <div>
              <label for="message" class="label">{productContent.form.fields.message}</label>
              <textarea id="message" name="message" rows="3" class="input-field"></textarea>
            </div>
            <button type="submit" class="btn-primary w-full text-lg py-3">
              {productContent.form.submit}
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Footer Badges -->
    <section class="py-8 bg-secondary-50 dark:bg-secondary-900 border-t border-secondary-200 dark:border-secondary-700">
      <div class="container-custom">
        <div class="flex flex-wrap items-center justify-center gap-4">
          {productContent.footer.badges.map((badge: string) => (
            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-50 dark:bg-primary-900/20 border border-primary-200 dark:border-primary-800 text-primary-700 dark:text-primary-300 text-sm font-medium">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              {badge}
            </span>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer lang={lang} content={siteContent} />
</MainLayout>
