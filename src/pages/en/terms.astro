---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import siteContent from '../../content/site.en.json';

const lang = 'en';
---

<MainLayout
  title={`Early Access Terms & Conditions | ${siteContent.company}`}
  description="Force Field Early Access Terms and Conditions — the agreement governing your use of the Force Field Solution during the Early Access Period."
  lang={lang}
